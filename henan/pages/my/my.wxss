.my{
  font-size: 28rpx;
  line-height: 56rpx;
}
.wrapper{
  width: 100%;
  height: 400rpx;
  position: relative;
}
.bg{
  width: 100%;
  height:100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
}
.user{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background-color: rgba(0,0,0,.4);
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
.items{
  margin: 0 20rpx;
  border-bottom: 2rpx solid #ccc;
  
}
.left{
  padding: 0 20rpx;
}
