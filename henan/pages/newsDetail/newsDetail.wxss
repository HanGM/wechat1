/* pages/newsDetail/newsDetail.wxss */
.detail{
  padding: 0;
  margin-bottom: 200rpx;
}
.main{
  width: 670rpx;
  margin: 0 40rpx;
  font-size: 24rpx;
  line-height: 48rpx;
}
.title{
  display: block;
  width: 100%;
  height: 48rpx;
  font-size: 28rpx;
  font-weight: bold;
  text-align: center;
}
.more{
  width: 100%;
  display: flex;
  justify-content: space-between;
  height: 48rpx;
  border-bottom: 1rpx solid #ccc;
}
image{
  width: 100%;
}
.action{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 710rpx;
  padding: 20rpx;
  display: flex;
  height: 56rpx;
  background-color: #f1f1f1;
}
.action input,.action text{
  flex: 1;
}
.action input{
  flex: 8;
  border: 2rpx solid #ccc;
  border-radius: 28rpx;
  padding: 0 20rpx;
}
.action text{
  text-align: center;
  line-height: 56rpx;
}